<%- contentFor('body') %>
<div class="container">
  <head>
    <!--Meta Tags requeridas pelo bootstrap-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tela de login</title>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel='stylesheet' href='/public/stylesheets/style.css'>
  </head>

  <body style="background-color: #330867; font-weight:bold;">
    
    <h1 style="font-weight:bold; color: #FFF; font-size: 50px; margin-left: 40px; margin-top: 20px;">Tela de Login</h1>
    <form action="/validaBDUsuarios" method="post">
        <div class="col-md-4 mb-3">
            <label for="login" class="form-label" style="color: #fff; margin-top: 50px; font-size: 20px; margin-left: 40px;">Login</label>
            <input type="text" class="form-control" id="login" name="login" placeholder="Digite seu e-mail:" style="margin-left: 40px;">
        </div>
        <div class="col-md-4 mb-4">
          <label for="senha" class="form-label" style="color: #fff; font-size: 20px; margin-left: 40px;">Senha</label>
          <input type="text" class="form-control" id="senha" name="senha" placeholder="Digite sua senha:" style="margin-left: 40px;">
        </div>

        
        <button type="submit" class="col-2 btn btn-primary mb-3" style="background-color: #5CF3FC; color: black; font-weight: bold; margin-left: 40px;">Entrar</button>
      </form>

   <a href="/add"><p style="color: #FFF; margin-left: 40px;">Cadastre-se</p></a> 
    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
  </body>

</div>

